<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Button to open ViewFlipperActivity -->
    <Button
        android:id="@+id/btnOpenViewFlipper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open ViewFlipper"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"/>

    <!-- Button to open SlideImagesActivity -->
    <Button
        android:id="@+id/btnOpenSlideImages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open Slide Images"
        app:layout_constraintTop_toBottomOf="@id/btnOpenViewFlipper"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"/>

    <!-- Button to open SlideImagesActivity2 (ViewPager2 with CircleIndicator3) -->
    <Button
        android:id="@+id/btnOpenSlideImages2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open Slide Images (ViewPager2)"
        app:layout_constraintTop_toBottomOf="@id/btnOpenSlideImages"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
